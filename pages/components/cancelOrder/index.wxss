.container {
  /* 具体信息 */
}
.container .title {
  width: 690rpx;
  height: 56rpx;
  font-size: 20rpx;
  color: #ff3b30;
  line-height: 28rpx;
  padding: 20rpx 30rpx;
}
.container .item {
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  font-size: 24rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}
.container .item .text {
  text-align: center;
}
.container .item .radio {
  transform: scale(0.5);
}
.container .info {
  font-size: 24rpx;
  padding: 30rpx;
  width: 750rpx;
  height: 260rpx;
  background: #ffffff;
}
.container .info text {
  margin-top: 120rpx;
}
.container .line {
  border: 1rpx solid #d7d7d7;
  width: 95%;
  margin: 0 auto;
}
.container .textarea {
  color: #717171;
  font-size: 26rpx;
  padding: 0 20rpx;
}
.btn {
  margin-top: 158rpx;
  height: 158rpx;
  background-color: #fff;
  box-shadow: 0px 0px 20rpx 0px rgba(196, 196, 196, 0.3);
  line-height: 158rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  /* 控制两个按钮的间距 */
}
.btn .item {
  /* 控制两个按钮的样式 */
  height: 98rpx;
  width: 336rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #0090ff;
  text-align: center;
  line-height: 98rpx;
  border: 1px solid #1472fc;
  border-radius: 8px;
}
.btn view:nth-child(1) {
  margin-right: 18rpx;
  background: #ccc;
  border: 0;
}
.isRuleShow {
  display: block;
}
.isRuleHide {
  display: none;
}
.float {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 0;
  left: 0;
}
.float .floatContent {
  width: 536rpx;
  height: 527rpx;
  background: #fff;
  /* 控制弹出框在中间显示 */
  margin: 40% auto;
  border-radius: 10rpx;
