<!--pages/components/cancelOrder/index.wxml-->
<view class="container">
  <view class="title">我们将会对订单进行实时跟踪，有效的保障您的合法权益，私下交易将无法享受到赔、财产安全保障、其他售后权益保障!</view>
  <view class="item">
    <view class="text">问题已解决，不需要了</view>
    <radio class="" value="" color=""></radio>   
  </view>
  <view class="line"></view>
  <view class="item">
    <view class="text">下单地址有误</view>
    <radio class="" value="" color=""></radio>   
  </view>
  <view class="line"></view>
  <view class="item">
    <view class="text">下单时间有误</view>
    <radio class="" value="" color=""></radio>   
  </view>
  <view class="line"></view>
  <view class="item">
    <view class="text">无原因/其他</view>
    <radio class="" value="" color=""></radio>   
  </view>
  <view class="line"></view>
  <view class="item">
    <view class="text">可备注具体原因</view> 
  </view>
  <textarea class="textarea" value="" placeholder="请您描述取消原因（100字以内)" placeholder-style="" placeholder-class="textarea-placeholder" 
      disabled="false" maxlength="140"  focus="true" 
      bindinput="" bindfocus="" bindblur="" bindconfirm="" bindlinechange="%{15}">
    </textarea>
</view>
  
 <!-- 底部按钮区域 -->

  <view class="btn">
    <view class="item"  bindtap="cancelOrderMask">取消订单</view>
    <view class="item" bindtap="cancelOrderMask1">取消订单并重新预约</view>
  </view>

 <!-- 点击取消按订单钮弹出弹出框 -->

<view class="float {{isRuleTrue?'isRuleShow':'isRuleHide'}}">
  <view class='floatContent'>
    <view class="title">确定要否取消订单!</view>
    <view class="line"></view> 
    <view class="btn1">
      <view class='button'  bindtap='closeMask'>再想想</view>
      <view class="shortLine"></view>
      <view class='button' bindtap='goToOrder'>确定</view>
    </view>
  </view>
</view>

<!-- 点击取消订单并重新预约按钮弹出弹出框 -->

<view class="float {{isRuleTrue1?'isRuleShow':'isRuleHide'}}">
  <view class='floatContent'>
    <view class="title">确定要取消订单并重新预约吗？</view>
    <view class="line"></view> 
    <view class="btn1">
      <view class='button'  bindtap='closeMask1'>取消</view>
      <view class="shortLine"></view>
      <view class='button' bindtap='goToJiaDianWeiXiu'>确定</view>
    </view>
  </view>
</view>
  