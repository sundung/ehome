.task-orders {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.task-orders .top {
  display: flex;
  justify-content: space-between;
}
.task-orders .top .left {
  display: flex;
  color: #1993fc;
}
.task-orders .top .left image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 15rpx;
}
.task-orders .top .right {
  color: green;
}
.task-orders .content {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.task-orders .content .left image {
  height: 160rpx;
  width: 160rpx;
}
.task-orders .content .right .top {
  display: flex;
  justify-content: center;
}
.task-orders .content .right .content .left {
  display: flex;
  flex-wrap: wrap;
}
.task-orders .content .right .content .right {
  display: flex;
  flex-wrap: wrap;
}
.task-orders .bottom .top {
  display: flex;
  justify-content: flex-start;
}
.task-orders .bottom .top .time {
  margin-left: 40rpx;
}
