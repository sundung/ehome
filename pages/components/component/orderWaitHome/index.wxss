.task-order {
  height: 360rpx;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  /* 控制订单顶部信息 */
  /* 订单中间部分 */
}
.task-order .top {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  /* 订单状态 */
}
.task-order .top .left {
  display: flex;
  font-weight: 400;
  color: #111111;
}
.task-order .top .left .image {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  /* 控制同意向与用户名的距离 */
  margin-right: 20rpx;
  background-color: #1993fc;
}
.task-order .top .right {
  font-weight: 400;
  color: #0090ff;
}
.task-order .content {
  display: flex;
  justify-content: space-between;
  /* 订单中间左侧部分 */
  /* 订单中间部分的右侧信息 */
}
.task-order .content .left {
  /* 订单图片 */
}
.task-order .content .left .image {
  height: 126rpx;
  width: 126rpx;
  background: #ffffff;
  box-shadow: 0px 0px 20px 0px rgba(196, 196, 196, 0.3);
  border-radius: 8px;
}
.task-order .content .right {
  margin-left: 20rpx;
}
.task-order .content .right .title {
  font-weight: 400;
  color: #111;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.task-order .content .right .content {
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
}
.task-order .content .right .content .left {
  display: flex;
  flex-wrap: wrap;
  /* 控制订单具体信息的上下距离 */
}
.task-order .content .right .content .left .item:nth-child(1) {
  margin-bottom: 12rpx;
}
.task-order .content .right .content .right {
  display: flex;
  flex-wrap: wrap;
  /* 控制订单具体信息的上下距离 */
}
.task-order .content .right .content .right .item:nth-child(1) {
  margin-bottom: 12rpx;
}
.task-order .bottom {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}
.task-order .bottom .top {
  display: flex;
  justify-content: flex-start;
}
.task-order .bottom .top .time {
  margin-left: 40rpx;
}
