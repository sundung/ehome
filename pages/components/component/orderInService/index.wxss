.task-orders-service {
  height: 420rpx;
  padding: 30rpx 30rpx 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  /* 订单中间部分 */
}
.task-orders-service .top {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  /* 订单状态 */
}
.task-orders-service .top .left {
  display: flex;
  color: #1993fc;
}
.task-orders-service .top .left .image {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  /* 控制头像与用户名的距离 */
  margin-right: 20rpx;
  background-color: #1993fc;
}
.task-orders-service .top .right {
  font-weight: 400;
  color: #0090ff;
}
.task-orders-service .content {
  display: flex;
  justify-content: space-between;
  /* 订单中间左侧部分 */
  /* 订单中间部分的右侧信息 */
}
.task-orders-service .content .left {
  /* 订单图片 */
}
.task-orders-service .content .left .image {
  height: 126rpx;
  width: 126rpx;
  background: #ffffff;
  box-shadow: 0px 0px 20px 0px rgba(196, 196, 196, 0.3);
  border-radius: 8px;
}
.task-orders-service .content .right {
  margin-left: 20rpx;
}
.task-orders-service .content .right .title {
  font-weight: 400;
  color: #111;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.task-orders-service .content .right .content {
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
}
.task-orders-service .content .right .content .left {
  display: flex;
  flex-wrap: wrap;
}
.task-orders-service .content .right .content .left .item:nth-child(1) {
  margin-bottom: 12rpx;
}
.task-orders-service .content .right .content .right {
  display: flex;
  flex-wrap: wrap;
}
.task-orders-service .content .right .content .right .item:nth-child(1) {
  margin-bottom: 12rpx;
}
.task-orders-service .bottom {
  font-size: 24rpx;
  color: #999;
  /* 获取维修清单按钮 */
}
.task-orders-service .bottom .top {
  /* 取消日期与服务地址的间距 */
  margin-bottom: 0;
  display: flex;
  justify-content: flex-start;
}
.task-orders-service .bottom .top .time {
  margin-left: 40rpx;
}
.task-orders-service .bottom .btn {
  /* 控制按钮与上边的距离 */
  margin-top: 10rpx;
  height: 60rpx;
  width: 216rpx;
  background: #ffffff;
  border-radius: 8px;
  border: 1rpx solid #0090ff;
  /* 控制文字的样式 */
  text-align: center;
  line-height: 60rpx;
  font-weight: 400;
  color: #0090ff;
  color: 28rpx;
  margin-left: 470rpx;
}
