page {
  background: #f3f3f3;
  /* padding: 0 14rpx; */
}
.task-orders {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.task-orders .top {
  display: flex;
  justify-content: space-between;
}
.task-orders .top .left {
  display: flex;
  color: #1993fc;
}
.task-orders .top .left image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 15rpx;
}
.task-orders .top .right {
  color: green;
}
.task-orders .content {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.task-orders .content .left image {
  height: 160rpx;
  width: 160rpx;
}
.task-orders .content .right .top {
  display: flex;
  justify-content: center;
}
.task-orders .content .right .content .left {
  display: flex;
  flex-wrap: wrap;
}
.task-orders .content .right .content .right {
  display: flex;
  flex-wrap: wrap;
}
.task-orders .bottom .top {
  display: flex;
  justify-content: flex-start;
}
.task-orders .bottom .top .time {
  margin-left: 40rpx;
}
.task-orders .bottom .btn {
  margin-top: 20rpx;
  display: grid;
  justify-content: right;
}
.task-orders .bottom .btn .buttonAll[plain][type='plain'],
.task-orders .bottom .btn wx-button[plain]:not([type]) {
  color: #1c94fc;
  background-color: white;
  border-color: #1c94fc;
}
