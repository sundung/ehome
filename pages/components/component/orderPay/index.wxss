.task-ordersPay {
  height: 420rpx;
  padding: 30rpx 30rpx 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  /* 订单中间部分 */
  /* 订单底部信息 */
}
.task-ordersPay .top {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  /* 订单状态 */
}
.task-ordersPay .top .left {
  display: flex;
  color: #1993fc;
}
.task-ordersPay .top .left .image {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  /* 控制头像与用户名的距离 */
  margin-right: 20rpx;
  background-color: #1993fc;
}
.task-ordersPay .top .right {
  font-weight: 400;
  color: #ff3b30;
}
.task-ordersPay .content {
  display: flex;
  justify-content: space-between;
  /* 订单中间左侧部分 */
  /* 订单中间部分的右侧信息 */
}
.task-ordersPay .content .left {
  /* 订单图片 */
}
.task-ordersPay .content .left .image {
  height: 126rpx;
  width: 126rpx;
  background: #ffffff;
  box-shadow: 0px 0px 20px 0px rgba(196, 196, 196, 0.3);
  border-radius: 8px;
}
.task-ordersPay .content .right {
  margin-left: 20rpx;
}
.task-ordersPay .content .right .title {
  font-weight: 400;
  color: #111;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.task-ordersPay .content .right .content {
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
}
.task-ordersPay .content .right .content .left {
  display: flex;
  flex-wrap: wrap;
}
.task-ordersPay .content .right .content .left .item:nth-child(1) {
  margin-bottom: 12rpx;
}
.task-ordersPay .content .right .content .right {
  display: flex;
  flex-wrap: wrap;
}
.task-ordersPay .content .right .content .right .item:nth-child(1) {
  margin-bottom: 12rpx;
}
.task-ordersPay .bottom {
  font-size: 24rpx;
  color: #999;
  /* 底部价格,支付按钮区域 */
}
.task-ordersPay .bottom .top {
  /* 取消日期与服务地址的间距 */
  margin-bottom: 0;
  display: flex;
  justify-content: flex-start;
}
.task-ordersPay .bottom .top .time {
  margin-left: 40rpx;
}
.task-ordersPay .bottom .btn {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.task-ordersPay .bottom .btn .price {
  flex: 5;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  color: #111;
}
.task-ordersPay .bottom .btn .price .text {
  margin-left: 14rpx;
  color: #0090ff;
}
.task-ordersPay .bottom .btn .buttonall {
  width: 216rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #0090ff;
  background-color: #fff;
  border-color: #0090ff;
}
