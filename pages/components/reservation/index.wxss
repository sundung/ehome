/* pages/components/reservation/index.wxss */
/* 设置整个页面背景色 */

page {
  background: #F3F3F3;
  /* padding: 0 14rpx; */
}

/* <!-- 报修项目模块开始 --------------------------------------------------------- --> */

.repairs {
  background-color: #fff;
  height: 300rpx;
  padding: 0 14rpx;
  display: flex;
}

.repairs .repairs-item {
  margin-top: 40rpx;
}

.repairs .repairs-item image {
  width:40rpx;
  height:40rpx;
  margin-right: 10rpx;
}
.repairs view:nth-child(1) {
  display: flex;
}
.repairs view:nth-child(2) {
  margin: 40rpx 80rpx 0;
}
.repairs view:nth-child(3) {
  margin-left: 100rpx;
  color: #666;
}

 .line-1 {
  margin: 0 auto;
  width:94vw;
  height:2rpx;
  background:#aaa;
  position: relative;
  top:-200rpx;
  left: 0;
}
/* 更换按钮 */
.repairs .changButton {
  text-align: center;
  height: 60rpx;
  width: 100rpx;
}


/* 遮罩层 */
.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}

/* 弹出层 */
.modalDlg {
  width: 100%;
  height: 480rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  padding:  24rpx;
  box-sizing: border-box;
}
/* 弹出层上部  */
.modalDlg .modalDlgTop {
  display: flex;
  justify-content: space-between;
}
/* 弹出层的服务项目 */
.modalDlg .serviceProject {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.modalDlg .serviceProject .serviceProject-item {
  margin-top: 24rpx;
  width: 30%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 14rpx;
  color: #666;
  border: 1px solid #666;
}
.modalDlg .serviceProject view:nth-child(-n+3) {
  margin: 28rpx 0;
}

.modalDlg .serviceProject .public {
  margin-top: 48rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.modalDlg .serviceProject view:nth-child(7) {
  width: 33%;
}