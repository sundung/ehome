page {
  background-color: #f2f2f2;
}
.btn {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.btn .item {
  flex: 1;
  border: 1rpx solid #1472fc;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #1472fc;
  background-color: #fff;
}
.isRuleShow {
  display: block;
}
.isRuleHide {
  display: none;
}
.float {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 0;
  left: 0;
}
.floatContent {
  padding: 20rpx;
  width: 80%;
  height: 400rpx;
  background: #fff;
  margin: 40% auto;
  border-radius: 20rpx;
}
.floatContent .title {
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
}
.floatContent .content .item {
  text-align: center;
}
.floatContent .line {
  border: 1rpx solid #ccc;
  margin-top: 20rpx;
}
.floatContent .btn1 {
  display: flex;
}
.floatContent .btn1 .button {
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  color: red;
}
.ruleHide {
  height: 60rpx !important;
  width: 60rpx !important;
  position: absolute;
  top: -9rpx;
  right: -9rpx;
}
