page {
  background-color: #f8f8f8;
  padding-bottom: 158rpx;
}
/* 底部按钮区域 */
.bottom {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 148rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0 0 20rpx 0 rgba(153, 153, 153, 0.2);
  width: 100vw;
}
.bottom .price {
  width: 50%;
  display: flex;
  text-align: center;
  margin-left: 12rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}
.bottom .price .text {
  color: #0090ff;
}
.bottom .pay {
  width: 336rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  border: 0;
  background-color: #0090ff;
}
.isRuleShow {
  display: block;
}
.isRuleHide {
  display: none;
}
.float {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 0;
  left: 0;
}
.float .floatContent {
  width: 536rpx;
  height: 527rpx;
  background: #fff;
  /* 控制弹出框在中间显示 */
  margin: 40% auto;
  border-radius: 10rpx;
  /* 控制弹出框的标题 */
  /* 标题与正文之间的横线 */
  /* 线段 */
}
.float .floatContent .title {
  font-size: 36rpx;
  color: #111;
  padding: 64rpx 58rpx 20rpx;
}
.float .floatContent .lineShort {
  margin-left: 58rpx;
  width: 47rpx;
  height: 3rpx;
  background: #111111;
}
.float .floatContent .content {
  height: 122rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  padding: 32rpx 58rpx 44rpx;
  margin-bottom: 100rpx;
}
.float .floatContent .line {
  border: 1rpx solid #d7d7d7;
}
.float .floatContent .btn1 {
  height: 87rpx;
  line-height: 87rpx;
  display: flex;
  /* 按钮之间的横线 */
}
.float .floatContent .btn1 .button {
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  color: #0090ff;
}
.float .floatContent .btn1 .confirm {
  color: #999;
  font-size: 32rpx;
}
.float .floatContent .btn1 .shortLine {
  margin-top: 32rpx;
  width: 1rpx;
  height: 38rpx;
  background: #d7d7d7;
}
