page {
  background-color: #f8f8f8;
  /* 解决底部按钮固定定位遮挡内容的问题 */
  padding-bottom: 158rpx;
}
.btn {
  margin-top: 158rpx;
  height: 158rpx;
  background-color: #fff;
  box-shadow: 0px 0px 20rpx 0px rgba(196, 196, 196, 0.3);
  line-height: 158rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  /* 控制两个按钮的间距 */
}
.btn .item {
  /* 控制两个按钮的样式 */
  height: 98rpx;
  width: 336rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #0090ff;
  text-align: center;
  line-height: 98rpx;
  border: 1px solid #1472fc;
  border-radius: 8px;
}
.btn view:nth-child(1) {
  margin-right: 18rpx;
  background: #ccc;
  border: 0;
}
.isRuleShow {
  display: block;
}
.isRuleHide {
  display: none;
}
.float {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 0;
  left: 0;
}
.float .floatContent {
  width: 536rpx;
  height: 527rpx;
  background: #fff;
  /* 控制弹出框在中间显示 */
  margin: 40% auto;
  border-radius: 10rpx;
  /* 控制弹出框的标题 */
  /* 标题与正文之间的横线 */
  /* 线段 */
}
.float .floatContent .title {
  font-size: 36rpx;
  color: #111;
  padding: 64rpx 58rpx 20rpx;
}
.float .floatContent .lineShort {
  margin-left: 58rpx;
  width: 47rpx;
  height: 3rpx;
  background: #111111;
}
.float .floatContent .content {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  padding: 32rpx 58rpx 44rpx;
}
.float .floatContent .line {
  border: 1rpx solid #d7d7d7;
}
.float .floatContent .btn1 {
  display: flex;
  /* 按钮之间的横线 */
}
.float .floatContent .btn1 .button {
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  color: #0090ff;
}
.float .floatContent .btn1 .confirm {
  color: #999;
  font-size: 32rpx;
}
.float .floatContent .btn1 .shortLine {
  margin-top: 32rpx;
  width: 1rpx;
  height: 38rpx;
  background: #d7d7d7;
}
