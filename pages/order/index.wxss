/* pages/order/index.wxss */

/* 订单页面的最顶部的tab栏 */
/* .tabs {} */
.tabs-title {
  display: flex;
  padding: 10rpx 0;
}
.title-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.active {
  color:red;
  border-bottom: 5rpx solid currentColor;
}

/* 待接单开始---------------------------------------------------------- */
.take-orders {
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.take-orders .top {
  display: flex;
  justify-content: space-between;
}
.take-orders .top .left {
  display: flex;
  font-size: 24rpx;
  align-items: center;
}
.take-orders .top .right {
  color: green;
}
.take-orders .top image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 14rpx;
}

/* 待接单服务的下半部分开始---------------------------------------- */
.take-orders .content {
  margin-top: 20rpx;
}
.take-orders .content .top .left {
  height: 120rpx;
  width: 120rpx;
  background-color: red;
}

.take-orders .content .content .top{
  display: flex;
}