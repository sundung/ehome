/* 轮播图样式  -----------------------------------------------------------*/
swiper {
  height:400rpx;
  width:100vw;
}
swiper image {
  height: 400rpx;
  width:100vw;
}
swiper swiper-item {
  height:300rpx;
}

/* icon按钮区域  -----------------------------------------------------------*/
.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
/* 使用flex控制子元素的排列方式 */
.container  .iconButton {
  /* align-items: center; */
  width:33.3%;
  min-width: 33.3%; 
  max-width: 33.3%;
}

/* 控制icon图片的大小 */
.container image {
  height:60rpx;
  width:60rpx;
  margin-bottom: 15rpx;
}
/* 选中最后三个元素 */
.container .iconButton:nth-child(n+4) {
  margin-top: 40rpx;
}

/* 家电维修模块 -----------------------------------------------------------*/

.jiadian {
  margin-top:20rpx;
  display: flex; 
  justify-content: space-around; 
}
.jiadian .jiadianweixiu-item .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 控制家电维修标题文字 */
.jiadianweixiu .text {
  margin-top:20rpx;
  color:blue;
  padding: 0 0 25rpx 25rpx;
}
/* 控制家电维修图片 */
.jiadianweixiu-item image {
  height: 160rpx;
  width:160rpx;
  border-radius: 25rpx;
  margin-bottom: 25rpx;
  background-color: rebeccapurple;
}
